<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fgv.strublic.tcc">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_logo_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SplashScreen"
                android:screenOrientation="sensorPortrait"
                android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Page1"
                android:label="Quem Somos">
        </activity>
        <activity
                android:name=".Page2"
                android:label="Cultura">
        </activity>
        <activity
                android:name=".Page3"
                android:label="Fique por Dentro">
        </activity>
        <activity
                android:name=".Page4"
                android:label="Calendários">
        </activity>
        <activity
                android:name=".Page5"
                android:label="Políticas">
        </activity>
        <activity
                android:name=".LoginActivity"
                android:label="Login">
        </activity>
        <activity android:name=".Page6"
                  android:label="Gr1ders">
        </activity>
    </application>

</manifest>